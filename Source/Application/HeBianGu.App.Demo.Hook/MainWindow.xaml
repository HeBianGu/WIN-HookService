<Window x:Class="HeBianGu.App.Demo.Hook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.App.Demo.Hook"
        mc:Ignorable="d" FontSize="15"
        Title="系统快捷键示例" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="已注册快捷键 - 请尝试使用快捷键" Padding="10,6">
            <TextBlock x:Name="tb"/>
        </GroupBox>

        <GroupBox Header="输出信息" Grid.Row="1"  Padding="10,6">
            <ScrollViewer>
                <TextBlock x:Name="tb_output"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
